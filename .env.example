# Purl Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Server
PURL_PORT=3000
PURL_HOST=0.0.0.0

# Storage
PURL_STORAGE_TYPE=clickhouse

# ClickHouse
PURL_CLICKHOUSE_HOST=clickhouse
PURL_CLICKHOUSE_PORT=8123
PURL_CLICKHOUSE_DATABASE=purl
PURL_CLICKHOUSE_USER=purl
# Generate with: openssl rand -base64 24
PURL_CLICKHOUSE_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# Authentication (comma-separated API keys)
PURL_AUTH_ENABLED=1
# Generate with: openssl rand -base64 32
PURL_API_KEYS=CHANGE_ME_GENERATE_SECURE_API_KEY

# Retention
PURL_RETENTION_DAYS=30

# Vector (for log collector)
# PURL_URL=http://purl:3000
# PURL_API_KEY=same_as_above
