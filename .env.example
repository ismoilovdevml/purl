# Purl Environment Configuration

# Server settings
PURL_PORT=3000
PURL_HOST=0.0.0.0

# Storage type: sqlite or clickhouse
PURL_STORAGE_TYPE=clickhouse

# SQLite settings (when PURL_STORAGE_TYPE=sqlite)
PURL_DB_PATH=./data/purl.db

# ClickHouse settings (when PURL_STORAGE_TYPE=clickhouse)
PURL_CLICKHOUSE_HOST=clickhouse
PURL_CLICKHOUSE_PORT=8123
PURL_CLICKHOUSE_DATABASE=purl
PURL_CLICKHOUSE_USER=default
PURL_CLICKHOUSE_PASSWORD=

# Log retention in days
PURL_RETENTION_DAYS=30

# Docker exposed ports
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
