# Purl Environment Configuration

# Server settings
PURL_PORT=3000
PURL_HOST=0.0.0.0

# Storage type: sqlite or clickhouse
PURL_STORAGE_TYPE=clickhouse

# SQLite settings (when PURL_STORAGE_TYPE=sqlite)
PURL_DB_PATH=./data/purl.db

# ClickHouse settings (when PURL_STORAGE_TYPE=clickhouse)
PURL_CLICKHOUSE_HOST=clickhouse
PURL_CLICKHOUSE_PORT=8123
PURL_CLICKHOUSE_DATABASE=purl
# Use 'purl' user with password for security (not 'default' without password)
PURL_CLICKHOUSE_USER=purl
PURL_CLICKHOUSE_PASSWORD=purl_password

# Log retention in days
PURL_RETENTION_DAYS=30

# Authentication (for API access)
# IMPORTANT: Enable authentication in production!
PURL_AUTH_ENABLED=1
# Comma-separated API keys for agents/Vector
# Generate with: openssl rand -hex 32
PURL_API_KEYS=your-secret-api-key-here

# Docker exposed ports
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000

# Alert Notifications (optional)

# Telegram Bot - create via @BotFather
PURL_TELEGRAM_BOT_TOKEN=
PURL_TELEGRAM_CHAT_ID=

# Slack Webhook - create via Slack App Directory
PURL_SLACK_WEBHOOK_URL=
PURL_SLACK_CHANNEL=

# Custom Webhook
PURL_ALERT_WEBHOOK_URL=
PURL_ALERT_WEBHOOK_TOKEN=
