<?xml version="1.0"?>
<clickhouse>
    <profiles>
        <!-- Default profile - optimized for log queries -->
        <default>
            <!-- Memory limits per query (2GB max) -->
            <max_memory_usage>2000000000</max_memory_usage>
            <max_memory_usage_for_user>3000000000</max_memory_usage_for_user>

            <!-- Disable query logging (reduces noise) -->
            <log_queries>0</log_queries>
            <log_queries_min_type>EXCEPTION_WHILE_PROCESSING</log_queries_min_type>

            <!-- Query timeouts -->
            <max_execution_time>60</max_execution_time>
            <timeout_before_checking_execution_speed>10</timeout_before_checking_execution_speed>

            <!-- Row/byte limits -->
            <max_rows_to_read>100000000</max_rows_to_read>
            <max_bytes_to_read>10000000000</max_bytes_to_read>
            <max_result_rows>100000</max_result_rows>
            <max_result_bytes>100000000</max_result_bytes>

            <!-- Load balancing -->
            <load_balancing>random</load_balancing>

            <!-- Optimize for log workloads -->
            <use_uncompressed_cache>1</use_uncompressed_cache>
            <optimize_read_in_order>1</optimize_read_in_order>

            <!-- Reduce memory for GROUP BY -->
            <max_bytes_before_external_group_by>500000000</max_bytes_before_external_group_by>
            <max_bytes_before_external_sort>500000000</max_bytes_before_external_sort>

            <!-- Insert settings for high-throughput -->
            <async_insert>1</async_insert>
            <wait_for_async_insert>0</wait_for_async_insert>
            <async_insert_max_data_size>10000000</async_insert_max_data_size>
            <async_insert_busy_timeout_ms>1000</async_insert_busy_timeout_ms>

            <!-- Merge settings -->
            <background_pool_size>4</background_pool_size>
        </default>

        <!-- Read-only profile -->
        <readonly>
            <readonly>1</readonly>
            <max_memory_usage>1000000000</max_memory_usage>
            <max_execution_time>30</max_execution_time>
        </readonly>
    </profiles>

    <users>
        <!-- Default user (admin) - Password set via environment -->
        <default>
            <password>CHANGE_ME_GENERATE_SECURE_PASSWORD</password>
            <networks>
                <!-- Restrict to internal Docker network only -->
                <ip>172.16.0.0/12</ip>
                <ip>127.0.0.1</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </default>

        <!-- Purl application user -->
        <purl>
            <password>CHANGE_ME_GENERATE_SECURE_PASSWORD</password>
            <networks>
                <!-- Restrict to Docker internal network only -->
                <ip>172.16.0.0/12</ip>
                <ip>10.0.0.0/8</ip>
                <ip>127.0.0.1</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
        </purl>
    </users>

    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>
